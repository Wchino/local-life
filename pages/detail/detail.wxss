/* pages/detail/detail.wxss */
swiper {
  height: 480rpx;
}
.swiper-image,
swiper navigator {
  height: 100%;
  min-width: 100%;
}
.info {
  padding: 20rpx;
  font-size: 28rpx;
  background-color: #fff;
}
.info .name {
  font-weight: 700;
  font-size: 32rpx;
}
.comments {
  padding: 50rpx 20rpx;
  margin-top: 30rpx;
  background-color: #fff;
}
.comments .content{
  display: flex;
  margin-bottom: 50rpx;
}
.content .name {
  flex: 1;
}
.content .data {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}
.pic {
  display: flex;
  justify-content: start;
}
.pic image {
  width: 110rpx;
  height: 110rpx;
  margin-right: 30rpx;
}
.user {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #ccc;
}